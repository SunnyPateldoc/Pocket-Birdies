<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketBirdies" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_gray</item>

        <!--        //MyActionbar-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--        //Change StatusBar-->
        <item name="android:statusBarColor">@color/black_gray</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->

        <!--        //ActionMenuTextColor-->
        <item name="actionMenuTextColor">@color/cream_100</item>

        <item name="android:actionMenuTextColor">@color/cream_100</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>

        //multi touch not support
        <item name="android:windowEnableSplitTouch">false</item>

        <!--        //BottomView-->
        <item name="bottomAppBarStyle">@style/MyBottomNavigation</item>
        <!--<item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>-->
        <!-- Status bar color. -->


        <!-- Customize bottom sheet. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="dialogTheme">@style/MyDialog</item>

        <item name="popupMenuBackground">@drawable/popup_background</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>

        
         <!--Custome spineer Dopdown-->


        <!-- Customize your theme here. -->
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="MyEditText_Arial" parent="Widget.AppCompat.EditText">
        
        <item name="fontFamily">@font/arial</item>
        
    </style>

    <style name="MyTextView_Arial" parent="Widget.AppCompat.TextView">

        <item name="fontFamily">@font/arial</item>

    </style>

    <style name="MyTextView_Arial_rounded" parent="Widget.AppCompat.TextView">

        <item name="fontFamily">@font/arial_rounded_mt</item>

    </style>

    <style name="ShapeAppearanceOverlay.Demo" parent="">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">3dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="MyPopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="popupMenuBackground">@drawable/popup_background</item>
        <item name="layout">@layout/popup_layout</item>
    </style>

    <style name="MyBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundColor">@color/black</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="MyActionBar.IconColor" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/ratingbar_progress</item>
        <item name="maxHeight">@dimen/_14sdp</item>
        <item name="minWidth">@dimen/_15sdp</item>
        <item name="minHeight">@dimen/_14sdp</item>
        <item name="maxWidth">@dimen/_15sdp</item>
        <item name="android:maxHeight">@dimen/_14sdp</item>
        <item name="android:minWidth">@dimen/_15sdp</item>

    </style>

    <style name="MyRatingBar2" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/ratingbar_progress</item>
        <item name="maxHeight">@dimen/_11sdp</item>
        <item name="minWidth">@dimen/_12sdp</item>
        <item name="minHeight">@dimen/_11sdp</item>
        <item name="maxWidth">@dimen/_12sdp</item>
        <item name="android:maxHeight">@dimen/_14sdp</item>
        <item name="android:minWidth">@dimen/_15sdp</item>

    </style>


    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="android:textColor">@color/black_title</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleStyle</item>
        <item name="android:titleTextStyle">@color/black_title</item>
        <item name="actionOverflowButtonStyle">@style/MyActionBar.IconColor</item>


    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="shapeAppearance">@style/CustomShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_19sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_19sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="DialogAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_up_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_down_bottom_sheet</item>

    </style>

    <style name="NewActionBarTitle">
        <item name="android:textColor">@color/black_name</item>
        <item name="android:fontFamily">@font/arial</item>
<!--        <item name="android:textColor">@color/black_name</item>-->
        <item name="android:textSize">@dimen/_16ssp</item> <!-- no effect -->
        <item name="android:textAllCaps">false</item> <!-- no effect -->
    </style>

    <style name="MyActionBar.TitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textColor">@color/black_name</item>
        <item name="android:fontFamily">@font/arial</item>
        <!--        <item name="android:textColor">@color/black_name</item>-->
        <item name="android:textSize">@dimen/_16ssp</item> <!-- no effect -->
        <item name="android:textAllCaps">false</item> <!-- no effect -->

    </style>

</resources>