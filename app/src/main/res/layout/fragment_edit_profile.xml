        <Spinner
            android:id="@+id/spinner_complete_golf_handicap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/spinner_background"
            android:paddingVertical="@dimen/_7sdp"
            style="@style/MyEditText_Arial"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_17sdp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/text_title_golf_handicap"
            app:layout_constraintStart_toStartOf="@id/text_title_golf_handicap"
            app:layout_constraintTop_toBottomOf="@id/text_title_golf_handicap" />


        <TextView
            android:id="@+id/text_title_home_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            style="@style/MyTextView_Arial"
            android:text="@string/home_course"
            android:textColor="@color/cream_90"
            android:textSize="@dimen/_10ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/spinner_complete_golf_handicap"
            app:layout_constraintStart_toStartOf="@id/spinner_complete_golf_handicap"
            app:layout_constraintTop_toBottomOf="@id/spinner_complete_golf_handicap" />

