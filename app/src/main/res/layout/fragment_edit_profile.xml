<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EditProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_user_profile"
            android:layout_width="@dimen/_81sdp"
            android:layout_height="@dimen/_81sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_title_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_23sdp"
            style="@style/MyTextView_Arial"
            android:text="@string/personal_details"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_user_profile" />


        <TextView
            android:id="@+id/text_title_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28sdp"
            style="@style/MyTextView_Arial"
            android:text="@string/first_name"
            android:textColor="@color/cream_90"
            android:textSize="@dimen/_10ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/text_title_personal_details"
            app:layout_constraintStart_toStartOf="@id/text_title_personal_details"
            app:layout_constraintTop_toBottomOf="@id/text_title_personal_details" />

        <EditText
            android:id="@+id/edt_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/text_backgound"
            android:digits="@string/name_digit"
            style="@style/MyEditText_Arial"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_14sdp"
            android:paddingVertical="@dimen/_11sdp"
            android:singleLine="true"
            android:textColor="@color/black_name"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/text_title_first_name"
            app:layout_constraintStart_toStartOf="@id/text_title_first_name"
            app:layout_constraintTop_toBottomOf="@id/text_title_first_name" />


        <TextView
            android:id="@+id/text_title_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            style="@style/MyTextView_Arial"
            android:text="@string/last_name"
            android:textColor="@color/cream_90"
            android:textSize="@dimen/_10ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/edt_first_name"
            app:layout_constraintStart_toStartOf="@id/edt_first_name"
            app:layout_constraintTop_toBottomOf="@id/edt_first_name" />

        <EditText
            android:id="@+id/edt_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/text_backgound"
            android:digits="@string/name_digit"
            style="@style/MyEditText_Arial"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_14sdp"
            android:paddingVertical="@dimen/_11sdp"
            android:singleLine="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/text_title_last_name"
            app:layout_constraintStart_toStartOf="@id/text_title_last_name"
            app:layout_constraintTop_toBottomOf="@id/text_title_last_name" />


        <TextView
            android:id="@+id/text_title_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_12sdp"

            style="@style/MyTextView_Arial"
            android:text="@string/age"
            android:textColor="@color/cream_90"
            android:textSize="@dimen/_10ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/edt_last_name"
            app:layout_constraintStart_toStartOf="@id/edt_last_name"
            app:layout_constraintTop_toBottomOf="@id/edt_last_name" />

        <EditText
            android:id="@+id/edt_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/text_backgound"
            android:digits="1234567890"
            style="@style/MyEditText_Arial"
            android:inputType="number"
            android:maxLength="2"
            android:paddingStart="@dimen/_14sdp"
            android:paddingVertical="@dimen/_11sdp"
            android:singleLine="true"
            app:layout_constrainedWidth="true"

            app:layout_constraintEnd_toEndOf="@id/text_title_age"
            app:layout_constraintStart_toStartOf="@id/text_title_age"
            app:layout_constraintTop_toBottomOf="@id/text_title_age" />


        <TextView
            android:id="@+id/text_title_years_of_golf_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            style="@style/MyTextView_Arial"
            android:text="@string/years_of_golf_experience"
            android:textColor="@color/cream_90"
            android:textSize="@dimen/_10ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/edt_age"
            app:layout_constraintStart_toStartOf="@id/edt_age"
            app:layout_constraintTop_toBottomOf="@id/edt_age" />


