        <Spinner
            android:id="@+id/spinner_complete_home_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/spinner_background"
            android:paddingVertical="@dimen/_7sdp"
            style="@style/MyEditText_Arial"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_17sdp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/text_title_home_course"
            app:layout_constraintStart_toStartOf="@id/text_title_home_course"
            app:layout_constraintTop_toBottomOf="@id/text_title_home_course" />




        <TextView
            android:id="@+id/text_title_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            style="@style/MyTextView_Arial"
            android:text="Bio"
            android:textColor="@color/cream_90"
            android:textSize="@dimen/_10ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/spinner_complete_home_course"
            app:layout_constraintStart_toStartOf="@id/spinner_complete_home_course"
            app:layout_constraintTop_toBottomOf="@id/spinner_complete_home_course" />



        <EditText
            android:id="@+id/edt_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/text_backgound"
            android:gravity="top"
            android:hint="@string/bio"
            android:padding="@dimen/_12sdp"
            android:textColorHint="@color/black_text_name"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/black_name"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/text_title_bio"
            app:layout_constraintHeight_min="@dimen/_180sdp"
            app:layout_constraintStart_toStartOf="@id/text_title_bio"
            app:layout_constraintTop_toBottomOf="@id/text_title_bio" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>