<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/_217sdp"
        android:layout_height="@dimen/_121sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:padding="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_tutorial"
                android:layout_width="@dimen/_217sdp"
                android:layout_height="@dimen/_121sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:src="@drawable/tutorial_a"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_title_tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        style="@style/MyTextView_Arial"
        android:text="Quick tutorials"
        android:textColor="@color/black_name"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/card_view"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintTop_toBottomOf="@id/card_view" />

    <TextView
        android:id="@+id/text_tutorial_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        style="@style/MyTextView_Arial"
        android:text="Struggling with a slice? Pocket Birdies coaches are ready to help you beat that dreaded ball flight! Scroll through countless clips to find the drills you need."
        android:textColor="@color/black_text_name"
        android:textSize="@dimen/_9ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/text_title_tutorial"
        app:layout_constraintStart_toStartOf="@id/text_title_tutorial"
        app:layout_constraintTop_toBottomOf="@id/text_title_tutorial" />

</androidx.constraintlayout.widget.ConstraintLayout>