<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EmailAddressFragment">


    <TextView
        android:id="@+id/text_title_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_13sdp"
        style="@style/MyTextView_Arial"
        android:text="Email Address"
        android:textColor="@color/black_white_shedo"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/edit_backgound_5"
        android:drawableEnd="@drawable/icon_ionic_ios_close_circle_outline__1_"
        android:inputType="textEmailAddress"
        android:paddingVertical="@dimen/_11sdp"
        android:paddingStart="@dimen/_19sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:textStyle="bold"
        style="@style/MyEditText_Arial"
        android:text="drewlewis@email.com"
        android:textColor="@color/black_dark_text_name"
        android:textSize="@dimen/_12ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/text_title_email"
        app:layout_constraintStart_toStartOf="@id/text_title_email"
        app:layout_constraintTop_toBottomOf="@id/text_title_email" />


</androidx.constraintlayout.widget.ConstraintLayout>