<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UpdatePasswordFragment">


    <TextView
        android:id="@+id/text_title_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_13sdp"
        style="@style/MyTextView_Arial"
        android:text="@string/current_password"
        android:textColor="@color/black_white_shedo"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/edit_backgound_5"
        style="@style/MyEditText_Arial"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/_11sdp"
        android:paddingStart="@dimen/_19sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:textColor="@color/black_dark_text_name"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/text_title_current_password"
        app:layout_constraintStart_toStartOf="@id/text_title_current_password"
        app:layout_constraintTop_toBottomOf="@id/text_title_current_password" />


    <TextView
        android:id="@+id/text_title_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        style="@style/MyTextView_Arial"
        android:text="@string/new_password"
        android:textColor="@color/black_white_shedo"
        android:textSize="@dimen/_11ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/edt_current_password"
        app:layout_constraintStart_toStartOf="@id/edt_current_password"
        app:layout_constraintTop_toBottomOf="@id/edt_current_password" />

    <EditText
        android:id="@+id/edt_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/edit_backgound_5"
        style="@style/MyEditText_Arial"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/_11sdp"
        android:paddingStart="@dimen/_19sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:textColor="@color/black_dark_text_name"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/text_title_new_password"
        app:layout_constraintStart_toStartOf="@id/text_title_new_password"
        app:layout_constraintTop_toBottomOf="@id/text_title_new_password" />


    <TextView
        android:id="@+id/text_title_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        style="@style/MyTextView_Arial"
        android:text="@string/confirm_password"
        android:textColor="@color/black_white_shedo"
        android:textSize="@dimen/_11ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/edt_new_password"
        app:layout_constraintStart_toStartOf="@id/edt_new_password"
        app:layout_constraintTop_toBottomOf="@id/edt_new_password" />

    <EditText
        android:id="@+id/edt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/edit_backgound_5"
        style="@style/MyEditText_Arial"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/_11sdp"
        android:paddingStart="@dimen/_19sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:textColor="@color/black_dark_text_name"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/text_title_confirm_password"
        app:layout_constraintStart_toStartOf="@id/text_title_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/text_title_confirm_password" />


</androidx.constraintlayout.widget.ConstraintLayout>