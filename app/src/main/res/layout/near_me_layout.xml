<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/black_shedo"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_golf_club_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        style="@style/MyTextView_Arial"
        android:text="McCormick Ranch Golf Club"
        android:textColor="@color/black_title"
        android:textSize="@dimen/_12ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="@id/view_divider"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_34sdp"
        android:src="@drawable/profile"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="@id/view_divider"
        app:layout_constraintTop_toTopOf="@id/text_golf_club_name" />


    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        style="@style/MyTextView_Arial"
        android:text="Blake Jirges"
        android:textColor="@color/black_text_name"
        android:textSize="@dimen/_6ssp"
        app:layout_constrainedWidth="true"
        android:layout_marginBottom="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/img_profile" />


    <TextView
        android:id="@+id/text_golf_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        style="@style/MyTextView_Arial"
        android:text="Golf Course  Scottsdale"
        android:textColor="@color/black_text_name"
        android:textSize="@dimen/_12ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/text_golf_club_name"
        app:layout_constraintStart_toStartOf="@id/text_golf_club_name"
        app:layout_constraintTop_toBottomOf="@id/text_golf_club_name" />


    <TextView
        android:id="@+id/text_open_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        style="@style/MyTextView_Arial"
        android:text="Open Now - 7:00 AM - 5:30 PM"
        android:textColor="@color/black_text_name"
        android:textSize="@dimen/_12ssp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/text_golf_course"
        app:layout_constraintStart_toStartOf="@id/text_golf_course"
        app:layout_constraintTop_toBottomOf="@id/text_golf_course" />

</androidx.constraintlayout.widget.ConstraintLayout>