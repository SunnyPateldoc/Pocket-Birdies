<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_gray"
    tools:context=".activity.SuccessSecond">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/_202sdp"
            android:layout_height="@dimen/_84sdp"
            android:layout_marginHorizontal="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:src="@drawable/pocketbirdies_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_title_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/MyTextView_Arial"
            android:paddingBottom="@dimen/_18sdp"
            android:text="@string/welcome_to_pocket_birdies"
            android:textColor="@color/white_78"
            android:textSize="@dimen/_20sdp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/image_logo"
            app:layout_constraintStart_toStartOf="@id/image_logo"
            app:layout_constraintTop_toBottomOf="@id/image_logo" />

        <TextView
            android:id="@+id/text_success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            style="@style/MyTextView_Arial"
            android:text="@string/success_message_second"
            android:textColor="@color/white_75"
            android:textSize="@dimen/_11ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/text_title_success"
            app:layout_constraintStart_toStartOf="@id/text_title_success"
            app:layout_constraintTop_toBottomOf="@id/text_title_success" />


        <TextView
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_23sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@drawable/bt_background"
            style="@style/MyTextView_Arial_rounded"
            android:gravity="center"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/btlogin"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/text_success_message"
            app:layout_constraintStart_toStartOf="@id/text_success_message"
            app:layout_constraintTop_toBottomOf="@id/text_success_message" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>